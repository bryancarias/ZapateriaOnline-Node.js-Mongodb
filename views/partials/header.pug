nav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top
  .container
    a.navbar-brand(href='/') Shoes Shop
    button.navbar-toggler(type="button", data-toggle="collapse",data-target="#firstNavbar")
      span.navbar-toggler-icon
    #firstNavbar.navbar-collapse.collapse
      ul.navbar-nav.ml-auto
        li.nav-item.active
          a.nav-link(href='/')
            | Home 
            span.sr-only (current)
        if (user)
          li.nav-item
            a.nav-link(href='/home') Products
          if (cart != 0)
            li.nav-item
              a.nav-link(href='/cart') Shopping Cart #{cart}
          else
            li.nav-item
              a.nav-link(href='/cart') Shopping Cart
        li.nav-item.dropdown
          a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
            if (user)
              |#{user.firstname} #{user.lastname}
            else
              | User Account
          .dropdown-menu(aria-labelledby='navbarDropdown')
            if (!user)
              a.dropdown-item(href='/signin') Sign In
              a.dropdown-item(href='/signup') Sign Up
            else
              if (user)
                if (user.isAdmin)
                  a.dropdown-item(href='/admin') Admin
              a.dropdown-item(href='/logout') Logout