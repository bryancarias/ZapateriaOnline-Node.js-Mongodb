extends layout
block content
  include partials/header
  header.header
    .container.mt-4
      .col-md-4.mx-auto
        .card
          if (signinMessage.length)
            .alert.alert-danger
              p.h6 #{signinMessage}
          .card-header
            h3 Sign In
          .card-body
            form(action="signin", method="post")
              .form-group
                input.form-control(type="email", name="email", placeholder="Ingrese E-mail")
              .form-group
                input.form-control(type="password", name="password", placeholder="Ingrese Password")
              .form-group
                button.btn.btn-primary.btn-block(type="submit") Iniciar Session